<table class="table" hidden="@IsHidden" style="text-align: center">
    <thead>
        <tr>
            <td>
                <span>Shear-rate</span>
            </td>
            <td>
                <span>Shear-stress</span>
            </td>
            <td></td>
        </tr>
        <tr>
            <td>
                [<SpanUnitLabel QuantityName="FluidShearRate" />]
            </td>
            <td>
                [<SpanUnitLabel QuantityName="FluidShearStress" />]
            </td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @if (ShearRateAndStresses.Count > 0)
        {
            @for (int j = 0; j < ShearRateAndStresses.Count; j++)
            {
                var rheometerMeasurement = ShearRateAndStresses.ElementAt(j);
                @if (rheometerMeasurement != null)
                {
                    <tr>
                       <td>
                           <SpanWithUnit QuantityName="FluidShearRate"
                                         SIValue="@(rheometerMeasurement.ShearRate)" />
                       </td>
                       <td>
                            <SpanWithUnit QuantityName="FluidShearStress"
                                          SIValue="@(rheometerMeasurement.ShearStress)" />
                       </td>
                       <td></td>
                    </tr>
                }
            }
        }
        else
        {
            <tr>Something went wrong with the input or the calculation</tr>
        }
    </tbody>
    <tfoot>
    </tfoot>
</table>

@code {
    [Parameter]
    public ICollection<ShearRateAndStress> ShearRateAndStresses { get; set; }

    [Parameter]
    public bool IsHidden { get; set; }

}
